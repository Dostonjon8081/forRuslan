<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/id_auth_fragment_logo"
        android:layout_width="210dp"
        android:layout_height="160dp"
        android:layout_marginTop="102dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/id_auth_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/gilroy_bold"
        android:gravity="center"
        android:text="@string/check_fine"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/id_auth_fragment_logo"
        app:layout_constraintStart_toStartOf="@id/id_auth_fragment_logo"
        app:layout_constraintTop_toBottomOf="@id/id_auth_fragment_logo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/id_auth_fragment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gilroy_bold"
        android:gravity="center"
        android:lineSpacingExtra="13dp"
        android:text="@string/auth_description"
        android:textColor="@color/pale_text"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/id_auth_fragment_title"
        app:layout_constraintStart_toStartOf="@id/id_auth_fragment_title"
        app:layout_constraintTop_toBottomOf="@id/id_auth_fragment_title" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/id_auth_fragment_button_telegram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_background"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_telegram_white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="center_vertical|center"
            android:paddingStart="20dp"
            android:paddingEnd="24dp"
            android:text="@string/auth_by_telegram"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>